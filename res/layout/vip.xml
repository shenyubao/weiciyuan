<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#E0E0E0"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="150dp">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/imgVIPHead"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/vip_head" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="申玉宝"
            android:id="@+id/txvVIPName"
            android:layout_alignTop="@+id/imgVIPHead"
            android:layout_toRightOf="@+id/imgVIPHead"
            android:layout_marginLeft="20dp"
            android:textColor="@color/red" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即续费"
            android:id="@+id/btnVIPPay"
            android:layout_alignBottom="@+id/imgVIPHead"
            android:layout_toRightOf="@+id/imgVIPHead"
            android:layout_marginLeft="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIP4，成长速度15点/天，还需92天升级"
            android:id="@+id/textViewVipDesc"
            android:layout_below="@+id/btnVIPPay"
            android:layout_alignLeft="@+id/imgVIPHead"
            android:layout_alignStart="@+id/imgVIPHead"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="功能特权 (优先·美观·安全)"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </LinearLayout>
    <ListView
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:id="@+id/ltvVIPDesc" />

</LinearLayout>